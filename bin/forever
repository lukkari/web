#!/usr/bin/env node
var forever = require('forever-monitor');
var path = require('path');

var appdir = path.join(__dirname, './server');

var config = {
  silent : false,  // Silences the output from stdout and stderr in the parent process
  max : 5,         // Sets the maximum number of times a given script should run
  killTree : true, // Kills the entire child process tree on `exit`
  watch : false,   // Value indicating if we should watch files.
  env : {
    PORT : 8000,
    MONGODB_URI : 'mongodb://localhost/learnnode_dev',
    NODE_ENV : 'production'
  },
  pidFile : path.join(process.env.HOME, 'www/logs/pid.log'),      // Path to put pid information for the process(es) started
  logFile : path.join(process.env.HOME, 'www/logs/main.log'),     // Path to log output from forever process (when daemonized)
  outFile : path.join(process.env.HOME, 'www/logs/child.log'),    // Path to log output from child stdout
  errFile : path.join(process.env.HOME, 'www/logs/child_err.log') // Path to log output from child stderr
};

var child = new (forever.Monitor)(appdir, config);

child.on('exit', function () {
  console.log('app.js has exited after 5 restarts');
});

child.start();

console.log('Process id: ' + process.pid)
